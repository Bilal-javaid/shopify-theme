{% comment %}
  Static Profile Cards Section
  - No customization options
  - Will show exactly the HTML provided
{% endcomment %}

<section id="static-profile-cards-{{ section.id }}" class="static-profile-cards page-width">
  <style>
    .profile-card-wrap{
        width:100%;
        display:flex;
        align-items:center;
        flex-wrap:wrap;
        gap:20px;
    }
    #static-profile-cards-{{ section.id }} .pcard{
    padding:{{ section.settings.pcard_padding }}px;
    border: {{ section.settings.card-border-width }}px solid;
     width:32%;
    }
    .pcard .pmedia{
        position:relative; /* Fixed: was "ralative" */
    }
    .pcard .pmedia .main-img{
        width:100%;
        height:auto;
    }
    .pcard .pmedia .label-img{
        position:absolute;
        width:50px;
        height:50px;
        border-radius:100%;
        top:10px; /* Optional positioning */
        left:10px;
    }
  </style>

  <div class="profile-card-wrap">
    {% for block in section.blocks %}
    <div class="pcard">
        <div class="pmedia">
            <img class="main-img" src="{{ block.settings.profil_image | img_url: 'large'}}"/>
            <img class="label-img" src="{{ block.settings.profil_label_image | img_url: 'large' }}">
        </div>
        <div class="pcontent">
            <h3>{{ block.settings.card_heading }}</h3>
            <p>{{ block.settings.card_description }}</p>
            <a class="pbtn" href="{{ block.settings.card_button_link }}">{{ block.settings.card_button }}</a>
        </div>
    </div>
    {% endfor %}
    </div>
</section>

{% schema %}
{
    "name":"proile cards",
    "tag": "section",
    "settings":[
        {
        "type": "range",
        "id": "pcard_padding",
        "label": "Card Padding (px)",
        "min": 10,
        "max": 60,
        "step": 5,
        "default": 20
        },
        {
        "type": "range",
        "id": "card-border-width",
        "label": "border width (px)",
        "default":1,
        "min": 0,
        "max": 4
        }
        
    ],
    "blocks":[
        {
            "type": "profile_card",
            "name": "Profile Card",
          "settings":[
            {

                "type": "image_picker",
                "id": "profil_image",
                "label": "main_image"
            },
            {
                "type": "image_picker",
                "id": "profil_label_image",
                "label": "label_image"
            },
            {

            "type": "text",
            "id": "card_heading",
            "label": "card_heading"

            },
            {

            "type": "textarea",
            "id": "card_description",
            "label": "card_description"

            },
            {

            "type": "text",
            "id": "card_button",
            "label": "card_button"

            },
            {

            "type": "url",
            "id": "card_button_link",
            "label": "card_button_link"
            
            }
            
            
        ]
        }
      
    ],
    "presets":[
        {
          "name": "profile card",
          "category": "custom",
          "blocks": [
                { "type": "profile_card" },
                { "type": "profile_card" }
            ]
        }
    ]
}
{% endschema %}